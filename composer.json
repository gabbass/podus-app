{
    "name": "podus/app",
    "description": "PODUS modernized application",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "lint": [
            "@pint --test",
            "phpcs"
        ],
        "format": "pint",
        "analyse": "phpstan analyse",
        "test": "phpunit"
    }
}
