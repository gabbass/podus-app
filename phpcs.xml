<?xml version="1.0"?>
<ruleset name="PODUS Coding Standard">
    <description>CodeSniffer configuration for PODUS.</description>
    <file>app</file>
    <file>legacy/public</file>
    <file>tests</file>
    <exclude-pattern>legacy/public/vendor/*</exclude-pattern>
    <rule ref="PSR12"/>
    <config name="ignore_warnings_on_exit" value="1"/>
</ruleset>
